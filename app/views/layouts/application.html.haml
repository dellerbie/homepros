!!!
%html
  %head
    %title= content_for?(:title) ? "OC HomeMasters - #{yield(:title)}" : "OC HomeMasters"
    %meta{name: 'description', content: 'Easily find home improvement professionals in Orange County, California'}
    = favicon_link_tag
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lobster+Two:700', rel: 'stylesheet', type: 'text/css'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Noto+Sans:400,700', rel: 'stylesheet', type: 'text/css'
    = javascript_include_tag "application"
    = csrf_meta_tags
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-40999422-1', 'ochomemasters.com');
      ga('send', 'pageview');

  %body{class: @base_css || ''}
    .navbar
      .navbar-inner
        = link_to root_path, class: "brand" do 
          %span.oc
            OC
          %span.homepros
            HomeMasters
        %ul.nav.pull-right.actions
          - if user_signed_in?
            - if current_user.premium?
              %li.premium-user
                %a{href: "javascript:void(0);"}
                  %i.icon-star
                  %span='Premium'
            - else
              %li.upgrade-to-premium
                = link_to 'Upgrade to Premium', new_upgrade_path, class: 'btn btn-success'
            %li.my-listing
              = link_to listing_path(current_user.listing) do 
                %i.icon-edit
                %span='My Listing'
            %li.my-account
              = link_to edit_user_registration_path do
                %i.icon-user
                %span='My Account'
            %li.logout
              = link_to destroy_user_session_path, method: :delete do
                %i.icon-off
                %span='Logout'
          - else 
            - unless @hide_login_btn
              %li.login
                = link_to new_user_session_path do
                  %i.icon-off
                  %span='Login'
            - unless @hide_get_listed_btn
              %li.sign-up
                = link_to 'Get Listed Today', new_user_registration_path, class: "btn btn-success"
    .hp-container.clearfix{class: @container_css || ''}
      = render 'shared/flash_messages', flash: flash
      = yield
      = render 'shared/footer' unless @hide_footer
