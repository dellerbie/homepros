!!!
%html
  %head
    %title="OC Homepros Beta"
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lobster+Two:700', rel: 'stylesheet', type: 'text/css'
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{class: @base_css || ''}
    .navbar
      .navbar-inner
        = link_to 'OC Homepros', root_path, class: "brand"
        .pull-right
          - if user_signed_in?
            = link_to 'My Listing', listing_path(current_user.listing), class: "btn btn-primary"
            = link_to 'My Account', edit_user_registration_path, class: "btn btn-info"
            = button_to 'Logout', destroy_user_session_path, class: 'btn btn-danger', method: :delete
          - else 
            = link_to 'Login', new_user_session_path, class: 'btn btn-primary'
            = link_to 'Get Listed Today', new_user_registration_path, class: "btn btn-success"
    .hp-container
      = render 'shared/flash_messages', flash: flash
      = yield
