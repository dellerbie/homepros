  -if @listing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@listing.errors.count, "error")} prohibited this listing from being saved:"
      %ul
        - @listing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company_name
    = f.text_field :company_name
  .field
    = f.label :company_logo
    = f.text_field :company_logo
  .field
    = f.label :budget_min
    = f.number_field :budget_min
  .field
    = f.label :budget_max
    = f.number_field :budget_max
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :contact_email
    = f.text_field :contact_email
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :portfolio_photo
    = f.text_field :portfolio_photo
  .field
    = f.label :portfolio_photo_description
    = f.text_field :portfolio_photo_description
  .actions
    = f.submit 'Save'
