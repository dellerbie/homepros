.preview
  %span.header
    Your free listing will look like this...
  .listing-container
    %span.company-name
      = @listing.company_name 
    %p
      %span.specialties.text
        = specialties(@listing)
      %br
      %span.location.text
        = @listing.city.name
    - if session[:edit_preview_photo_url].present?
      = image_tag(session[:edit_preview_photo_url], id: 'img_prev')
    - elsif @listing.portfolio_photo.present?
      = image_tag(@listing.portfolio_photo, id: 'img_prev')
    - else
      = image_tag('small-listing.png', id: 'img_prev')
    %p
      %span.description.text
        = @listing.portfolio_photo_description

= render 'form'