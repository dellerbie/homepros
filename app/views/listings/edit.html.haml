- content_for :title, "Edit - #{@listing.company_name}"

.preview{class: current_user.premium? ? 'premium' : ''}
  - if current_user.premium?
    %span.header
      Your premium listing will look like this...
      
    .listing-container.premium
      %header.clearfix
        %span.company-name
          = truncate(@listing.company_name, length: 41)
        %span.company-logo.pull-right
          - if session[:logo_photo_url].present?
            = image_tag(session[:logo_photo_url], class: 'company-logo company_logo_prev')
          - elsif @listing.portfolio_photo.present?
            = image_tag(@listing.company_logo_photo_url, class: 'company-logo company_logo_prev')
          - else
            = image_tag('', class: 'company-logo company_logo_prev')
        %span.specialties.text
          = truncate(specialties(@listing), length: 48)
        %span.location.text
          = @listing.city.name
      
      - if session[:edit_preview_photo_url].present?
        = image_tag(session[:edit_preview_photo_url], id: 'img_prev', class: 'portfolio-img')
      - elsif @listing.portfolio_photo.present?
        = image_tag(@listing.portfolio_photo, id: 'img_prev', class: 'portfolio-img')
      - else
        = image_tag 'small-listing.png', id: 'img_prev', class: 'portfolio-img'
      
      %p
        %span.description.text
          = truncate(@listing.portfolio_photo_description, length: 310)
  - else 
    %span.header
      Your free listing will look like this...
      
    .listing-container
      %span.company-name
        = truncate(@listing.company_name, length: 24)
      %p
        %span.specialties.text
          = truncate(specialties(@listing), length: 30)
        %br
        %span.location.text
          = @listing.city.name
      - if session[:edit_preview_photo_url].present?
        = image_tag(session[:edit_preview_photo_url], id: 'img_prev')
      - elsif @listing.portfolio_photo.present?
        = image_tag(@listing.portfolio_photo, id: 'img_prev')
      - else
        = image_tag('small-listing.png', id: 'img_prev')
      %p
        %span.description.text
          = truncate(@listing.portfolio_photo_description, length: 31)

= render 'form'